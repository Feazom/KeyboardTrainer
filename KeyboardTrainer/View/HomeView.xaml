					Width="50"
					VerticalAlignment="Center">
                    <Separator.LayoutTransform>
                        <RotateTransform Angle="90"/>
                    </Separator.LayoutTransform>
                </Separator>

                <TextBlock Text="{Binding NextText}"
					Height="30"
					Width="300"
					FontSize="18"
					VerticalAlignment="Center"
					TextAlignment="Left"
					Padding="0,5,5,5"
					Margin="-300,5,0,5">

                </TextBlock>
            </StackPanel>
